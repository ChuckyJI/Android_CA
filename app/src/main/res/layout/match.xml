<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        style="@style/vertiPrefer"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            style="@style/horiPrefer"
            android:layout_weight="1"
            android:text="0"
            android:textColor="#1AFF37"
            android:textSize="48sp"
            android:textStyle="bold"
            android:id="@+id/correctPairs"
            />
        <TextView
            style="@style/horiPrefer"
            android:layout_weight="2"
            android:text="/6(Total)"
            android:gravity="left|center_vertical"
            android:textSize="26sp"
            android:textStyle="bold"
            />

        <TextView
            style="@style/horiPrefer"
            android:layout_weight="1"

            />


        <ImageView
            style="@style/horiPrefer"
            android:layout_weight="1"
            android:src="@mipmap/clock"
            android:layout_marginTop="20px"
            android:layout_marginBottom="20px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            />

        <TextView
            style="@style/horiPrefer"
            android:layout_weight="1"
            android:text="180S"
            android:textSize="25sp"
            android:textStyle="bold"
            android:id="@+id/timer"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                style="@style/marginStyle">
                <ImageView
                    style="@style/totalArrangement"
                    android:id="@+id/border1"
                    android:src="@mipmap/border"/>
                <ImageView
                    style="@style/totalArrangement"
                    android:id="@+id/importid1"/>

                <androidx.appcompat.widget.AppCompatButton
                    style="@style/totalArrangement"
                    android:id="@+id/picbtn1"
                    android:background="@drawable/transparent_border"/>/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                style="@style/marginStyle">
                <ImageView
                    style="@style/totalArrangement"
                    android:id="@+id/border2"
                    android:src="@mipmap/border"/>
                <ImageView
                    style="@style/totalArrangement"
                    android:id="@+id/importid2"/>

                <androidx.appcompat.widget.AppCompatButton
                    style="@style/totalArrangement"
                    android:id="@+id/picbtn2"
                    android:background="@drawable/transparent_border"/>/>

            </FrameLayout>


            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                style="@style/marginStyle">
                <ImageView
                    style="@style/totalArrangement"
                    android:id="@+id/border3"
                    android:src="@mipmap/border"/>
                <ImageView
                    style="@style/totalArrangement"
                    android:id="@+id/importid3"/>

                <androidx.appcompat.widget.AppCompatButton
                    style="@style/totalArrangement"
                    android:id="@+id/picbtn3"
                    android:background="@drawable/transparent_border"/>/>

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                style="@style/marginStyle">
                <ImageView
                    style="@style/totalArrangement"
                    android:id="@+id/border4"
                    android:src="@mipmap/border"/>
                <ImageView
                    style="@style/totalArrangement"
                    android:id="@+id/importid4"/>

                <androidx.appcompat.widget.AppCompatButton
                    style="@style/totalArrangement"
                    android:id="@+id/picbtn4"
                    android:background="@drawable/transparent_border"/>/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                style="@style/marginStyle">
                <ImageView
                    style="@style/totalArrangement"
                    android:id="@+id/border5"
                    android:src="@mipmap/border"/>
                <ImageView
                    style="@style/totalArrangement"
                    android:id="@+id/importid5"/>

                <androidx.appcompat.widget.AppCompatButton
                    style="@style/totalArrangement"
                    android:id="@+id/picbtn5"
                    android:background="@drawable/transparent_border"/>/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                style="@style/marginStyle">
                <ImageView
                    style="@style/totalArrangement"
                    android:id="@+id/border6"
                    android:src="@mipmap/border"/>
                <ImageView
                    style="@style/totalArrangement"
                    android:id="@+id/importid6"/>

                <androidx.appcompat.widget.AppCompatButton
                    style="@style/totalArrangement"
                    android:id="@+id/picbtn6"
                    android:background="@drawable/transparent_border"/>/>

            </FrameLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                style="@style/marginStyle">
                <ImageView
                    style="@style/totalArrangement"
                    android:id="@+id/border7"
                    android:src="@mipmap/border"/>
                <ImageView
                    style="@style/totalArrangement"
                    android:id="@+id/importid7"/>

                <androidx.appcompat.widget.AppCompatButton
                    style="@style/totalArrangement"
                    android:id="@+id/picbtn7"
                    android:background="@drawable/transparent_border"/>/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                style="@style/marginStyle">
                <ImageView
                    style="@style/totalArrangement"
                    android:id="@+id/border8"
                    android:src="@mipmap/border"/>
                <ImageView
                    style="@style/totalArrangement"
                    android:id="@+id/importid8"/>

                <androidx.appcompat.widget.AppCompatButton
                    style="@style/totalArrangement"
                    android:id="@+id/picbtn8"
                    android:background="@drawable/transparent_border"/>/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                style="@style/marginStyle">
                <ImageView
                    style="@style/totalArrangement"
                    android:id="@+id/border9"
                    android:src="@mipmap/border"/>
                <ImageView
                    style="@style/totalArrangement"
                    android:id="@+id/importid9"/>

                <androidx.appcompat.widget.AppCompatButton
                    style="@style/totalArrangement"
                    android:id="@+id/picbtn9"
                    android:background="@drawable/transparent_border"/>/>

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                style="@style/marginStyle">
                <ImageView
                    style="@style/totalArrangement"
                    android:id="@+id/border10"
                    android:src="@mipmap/border"/>
                <ImageView
                    style="@style/totalArrangement"
                    android:id="@+id/importid10"/>

                <androidx.appcompat.widget.AppCompatButton
                    style="@style/totalArrangement"
                    android:id="@+id/picbtn10"
                    android:background="@drawable/transparent_border"/>/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                style="@style/marginStyle">
                <ImageView
                    style="@style/totalArrangement"
                    android:id="@+id/border11"
                    android:src="@mipmap/border"/>
                <ImageView
                    style="@style/totalArrangement"
                    android:id="@+id/importid11"/>

                <androidx.appcompat.widget.AppCompatButton
                    style="@style/totalArrangement"
                    android:id="@+id/picbtn11"
                    android:background="@drawable/transparent_border"/>/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                style="@style/marginStyle">
                <ImageView
                    style="@style/totalArrangement"
                    android:id="@+id/border12"
                    android:src="@mipmap/border"/>
                <ImageView
                    style="@style/totalArrangement"
                    android:id="@+id/importid12"/>

                <androidx.appcompat.widget.AppCompatButton
                    style="@style/totalArrangement"
                    android:id="@+id/picbtn12"
                    android:background="@drawable/transparent_border"/>/>

            </FrameLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        style="@style/vertiPrefer"
        android:orientation="vertical"
        android:layout_weight="2">

        <LinearLayout
            style="@style/vertiPrefer"
            android:layout_weight="2"
            android:orientation="horizontal">

            <ImageView
                style="@style/horiPrefer"
                android:src="@mipmap/player1"
                android:layout_weight="1"
                />

            <LinearLayout
                style="@style/horiPrefer"
                android:orientation="vertical"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/player1Name"
                    style="@style/vertiPrefer"
                    android:layout_weight="2"
                    android:text="PLAYER 1"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/vertiPrefer"
                    android:layout_weight="2"
                    android:text="0"
                    android:textColor="#FF0000"
                    android:id="@+id/player1"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    />

            </LinearLayout>

            <ImageView
                style="@style/horiPrefer"
                android:src="@mipmap/player2"
                android:layout_weight="1"
                android:id="@+id/player2pic"
                />

            <LinearLayout
                style="@style/horiPrefer"
                android:orientation="vertical"
                android:layout_weight="2">

                <TextView
                    style="@style/vertiPrefer"
                    android:layout_weight="2"
                    android:text="PLAYER 2"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:id="@+id/player2Name"
                    />

                <TextView
                    style="@style/vertiPrefer"
                    android:layout_weight="2"
                    android:text="0"
                    android:id="@+id/player2"
                    android:textColor="#FF0000"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    />

            </LinearLayout>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            style="@style/vertiPrefer"
            android:text="BACK"
            android:id="@+id/back"
            android:background="#C4FCCB"
            android:layout_weight="1">

        </androidx.appcompat.widget.AppCompatButton>


    </LinearLayout>


</LinearLayout>